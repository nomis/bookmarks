<!DOCTYPE html>
<html>
	<head>
		<title>Bookmarks<%= (": " + yield(:title) unless yield(:title).blank?).to_s %></title>
		<% unless yield(:robots).blank? then %>
		<meta name="robots" content="<%= yield(:robots) %>">
		<% end %>
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<% if !request.session_options[:drop] %>
			<%= csrf_meta_tags %>
			<%= csp_meta_tag %>
		<% end %>
		<%= stylesheet_link_tag 'application', media: 'all' %>
		<%= favicon_link_tag "data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20100%20100%22%3E%3Ctext%20y%3D%22.9em%22%20font-size%3D%2290%22%3E#{url_encode("ðŸ”–")}%3C%2Ftext%3E%3C%2Fsvg%3E", type: "image/svg+xml" %>
		<%= javascript_pack_tag 'application' %>
	</head>

	<body>
		<p id="alert"><%= alert %></p>
		<p id="notice"><%= notice %></p>
		<%= yield %>
	</body>
</html>
